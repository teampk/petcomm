<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddDeviceActivity">

    <data>
        <variable
            name="addDevice"
            type="com.example.petcomm.AddDeviceActivity"/>
    </data>

    <LinearLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_device"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:contentDescription="@string/desc_device"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/petmom" />


        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="15dp"
                    android:id="@+id/tv_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tv_device_test_example"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    />

            </LinearLayout>
        </ScrollView>

        <ListView
            android:id="@+id/list_view_device"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_wifi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/height_button"
                android:background="@color/colorPrimary"
                android:text="WIFI"
                android:textSize="@dimen/text_size"
                android:onClick="@{addDevice::addDeviceListener}"

                />
            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="match_parent">

            </RelativeLayout>

            <Button
                android:id="@+id/bt_discover"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/height_button"
                android:background="@color/colorPrimary"
                android:text="@string/bt_register_device"
                android:textSize="@dimen/text_size"
                android:onClick="@{addDevice::addDevice2Listener}"

                />

        </LinearLayout>



        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/pb_device"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"/>





    </LinearLayout>


</layout>