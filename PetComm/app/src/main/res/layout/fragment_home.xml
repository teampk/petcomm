<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.FragmentHome">

    <data>
        <variable
            name="fragmentHome"
            type="com.example.petcomm.FragmentHome"/>
    </data>

    <LinearLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Header View -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/colorPrimary"
            android:id="@+id/cl_top_bar_home"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            >

            <ImageView
                android:contentDescription="@string/desc_icon"
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_title_home"


                />

        </android.support.constraint.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                >


                <!-- 강아지 버튼 -->
                <LinearLayout
                    android:id="@+id/ll_dog"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"

                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <Spinner
                        android:id="@+id/spinner_dog"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"

                        >


                    </Spinner>

                    <Button
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_add_black_24dp"

                        android:onClick="@{fragmentHome::addDogListener}"

                        />


                </LinearLayout>

                <!-- 선택된 강아지가 있을 때 -->
                <android.support.constraint.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/cl_exist_dog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ll_dog"
                    >
                    <!-- 사진 -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/length_image_profile"
                        android:layout_height="@dimen/length_image_profile"
                        android:layout_marginTop="15dp"

                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorBlack"
                        app:civ_circle_background_color="@color/colorWhite"
                        android:src="@drawable/bichon"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:onClick="@{fragmentHome::dogProfileListener}"

                        />


                    <!-- 이름 -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/ll_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/iv_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_name_is"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorBlack"

                            />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_name_example"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <!-- 급식기 device1-->
                    <LinearLayout
                        android:id="@+id/ll_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/ll_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_device_is"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorBlack"

                            />

                        <TextView
                            android:id="@+id/tv_device"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_device_example"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <!-- 배변판 device2 -->
                    <LinearLayout
                        android:id="@+id/ll_device2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/ll_device"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_device2_is"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorBlack"

                            />

                        <TextView
                            android:id="@+id/tv_device2"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_device_empty"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <!-- 급여 계획표 -->
                    <LinearLayout
                        android:id="@+id/ll_feed_plan"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"

                        android:layout_marginTop="15dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorBackgroundGray"
                        app:layout_constraintTop_toBottomOf="@+id/ll_device2"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_feed_plan_for_today"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold"
                            android:gravity="center"
                            />

                        <LinearLayout
                            android:id="@+id/ll_row_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:id="@+id/tv_row1_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/tv_feed_plan_example_1_time"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"

                                />

                            <TextView
                                android:id="@+id/tv_row1_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/tv_feed_plan_example_1_amount"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"
                                />

                            <TextView
                                android:id="@+id/tv_row1_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/tv_feed_plan_example_1_status"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_row_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:id="@+id/tv_row2_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/tv_feed_plan_example_2_time"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"

                                />

                            <TextView
                                android:id="@+id/tv_row2_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/tv_feed_plan_example_2_amount"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"
                                />

                            <TextView
                                android:id="@+id/tv_row2_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/tv_feed_plan_example_2_status"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_row_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:id="@+id/tv_row3_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/tv_feed_plan_example_3_time"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"

                                />

                            <TextView
                                android:id="@+id/tv_row3_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/tv_feed_plan_example_3_amount"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"
                                />

                            <TextView
                                android:id="@+id/tv_row3_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/tv_feed_plan_example_3_status"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/colorBlack"
                                />

                        </LinearLayout>




                    </LinearLayout>

                    <!-- Divider -->
                    <ImageView
                        android:contentDescription="@string/desc_divider"
                        android:id="@+id/divider"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBackgroundGray"
                        app:layout_constraintTop_toBottomOf="@+id/ll_feed_plan"

                        />

                    <!-- 사용자 추천 서비스 -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        >
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="60dp"
                            android:layout_height="200dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_petcomm"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/bichon"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />


                        </android.support.constraint.ConstraintLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/tv_petcomm_doctor"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_size"
                                android:textStyle="bold"
                                />

                            <android.support.constraint.ConstraintLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="20dp"


                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                >

                                <TextView
                                    android:id="@+id/tv_petcomm_said"
                                    android:paddingBottom="30dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_petcomm_said_empty"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/text_size_small"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    />

                                <TextView
                                    android:id="@+id/bt_go_add_device"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_petcomm_said"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:text="@string/bt_go_add_device"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/text_size"
                                    android:background="@color/colorAccent"

                                    />


                            </android.support.constraint.ConstraintLayout>


                        </LinearLayout>



                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>

                <!-- 강아지가 없을 때 -->
                <android.support.constraint.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/cl_empty_dog"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_dog"
                    >

                    <TextView
                        android:id="@+id/tv_empty_dog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/tv_empty_dog"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        />


                </android.support.constraint.ConstraintLayout>


            </android.support.constraint.ConstraintLayout>


        </ScrollView>














    </LinearLayout>


</layout>