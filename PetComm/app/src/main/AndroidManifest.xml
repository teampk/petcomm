<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petcomm">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_petcomm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_petcomm"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        >


        <activity
            android:name=".SignInActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".SplashActivity"/>
        <activity android:name=".SignUpActivity"/>
        <activity android:name=".RegisterDogActivity"/>

        <activity android:name=".AddDeviceActivity"/>
        <activity android:name=".AddDeviceActivity2"/>
        <activity android:name=".DogProfileActivity"/>
        <activity android:name=".AutoFeedActivity"/>




    </application>




</manifest>